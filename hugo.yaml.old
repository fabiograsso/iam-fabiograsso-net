  copyright: "Â© 2023 Fabio Grasso"
  socialIcons:
    - name: LinkedIn
      url: "https://linkedin.com/in/fabiograsso82"
    - name: GitHub
      url: "https://github.com/fabiograsso"
    - name: Instagram
      url: "https://instagram.com/fabiograsso82"
    - name: Email
      url: "mailto:iam@fabiograsso.net"
    - name: rss
      url: "/posts/index.xml"

outputs:
  home: [HTML, RSS, JSON]
  page: [HTML, RSS]
  section: [HTML, RSS]
  taxonomy: [HTML, RSS]

services:
  rss:
    limit: 42
    filename: "index.xml"
    section: "posts"
    includeHome: false

sitemap:
  filename: "sitemap.xml"
  changefreq: "weekly"
  priority: 0.5
  includeHome: true
  includeSection: true
  excludedKinds: ["privacy"]

permalinks:
  posts: "/posts/:year/:slugorcontentbasename/"
  section: "/:section/"
  about: "/about/"
  privacy: "/privacy/"

markup:
  goldmark:
    renderer:
      unsafe: true
  highlight:
    noClasses: false

minify:
  disableHTML: false
  disableCSS: false
  disableJS: false
  minifyOutput: true

imaging:
  quality: 85
  resampleFilter: "Lanczos"
  anchor: "smart"

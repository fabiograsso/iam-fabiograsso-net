mainsections: ["posts", "tips"]
backgroundImageWidth: 1920

highlightCurrentMenuArea: true
smartTOC: true

header:
  layout: "basic"

footer:
  showMenu: true
  showCopyright: true
  showThemeAttribution: true
  showAppearanceSwitcher: true
  showScrollToTop: true

homepage:
  layout: "card"
  homepageImage: "apple-touch-icon.png"
  showRecent: true
  showRecentItems: 20
  showMoreLink: true
  showMoreLinkDest: "/posts/"
  layoutBackgroundBlur: false
  disableHeroImageFilter: false

article:
  showDate: true
  showViews: true
  showLikes: true
  showDateUpdated: true
  showAuthor: true
  showAuthorBottom: true
  showHero: true
  showEdit:  true
  editURL: ""
  editAppendPath: true
  showTableOfContents: true
  showTaxonomies: true
  showWordCount: true
  showComments: true
  sharingLinks: true
  showZenMode: true

defaultAppearance: "auto"
autoSwitchAppearance: true

enableSearch: true
enableGitInfo: true
enableCodeCopy: true

params:
  author:
    name: "Fabio Grasso"
    headline: "Solutions Engineer â€” Identity & Access Management"
    image: "/apple-touch-icon.png"
    email: "iam@fabiograsso.net"
    links:
      - title: "LinkedIn"
        url: "https://linkedin.com/in/fabiograsso82"
      - title: "GitHub"
        url: "https://github.com/fabiograsso"
    headline: "Solutions Engineer at Okta"

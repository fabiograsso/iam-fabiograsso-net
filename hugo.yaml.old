baseURL: "https://iam.fabiograsso.net"
languageCode: "en-us"
title: "IAM.FabioGrasso.net"

theme: ["blowfish"]

enableRobotsTXT: true
buildDrafts: false
buildFuture: false
buildExpired: false
enableEmoji: true

defaultContentLanguage: "en"
defaultContentLanguageInSubdir: false


# Headers for Cloudflare Pages
# https://developers.cloudflare.com/pages/configuration/headers/

/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Content-Security-Policy: default-src 'self' https://giscus.app; script-src 'self' 'unsafe-inline' https://giscus.app https://static.cloudflareinsights.com https://kwesforms.com https://cdn.credly.com; style-src 'self' 'unsafe-inline' https://giscus.app; img-src 'self' data: https://giscus.app https://avatars.githubusercontent.com https://github.githubassets.com; connect-src 'self' https://api.github.com https://giscus.app https://cloudflareinsights.com; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; frame-src 'self' https://giscus.app;
  Access-Control-Allow-Origin: https://giscus.app
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Origin, X-Requested-With, Content-Type, Accept
  Access-Control-Allow-Credentials: true
  Cache-Control: public, max-age=86400


/secure/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: no-referrer

/static/*
  Cache-Control: public, max-age=3153600, immutable

/static/img/*
  Cache-Control: public, max-age=3153600, immutable

/*.css
  Cache-Control: public, max-age=3153600

/*.js
  Cache-Control: public, max-age=3153600

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable
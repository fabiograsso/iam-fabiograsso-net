baseURL: "https://iam.fabiograsso.net"
languageCode: "en-us"
title: "IAM.FabioGrasso.net"
defaultContentLanguage: "en"
theme: PaperModX
enableRobotsTXT: true
buildDrafts: false
buildFuture: false
buildExpired: false
hasCJKLanguage: false
enableEmoji: true
pagination:
  pagerSize: 10
enableGitInfo: true
frontmatter:
    lastmod:
    - lastmod
    - :git
    - date
    - publishDate
enableInlineShortcodes: true
pygmentsUseClasses: true
mainsections: ["posts", "papermod"]

languages:
  en:
    weight: 1
    languageName: English
    languageCode: "en"
    params:
      flagEmoji: "ðŸ‡¬ðŸ‡§"
  it:
    weight: 2
    languageName: Italiano
    languageCode: "it"
    params:
      flagEmoji: "ðŸ‡®ðŸ‡¹"
  fr:
    weight: 3
    languageName: FranÃ§ais
    languageCode: "fr"
    params:
      flagEmoji: "ðŸ‡«ðŸ‡·"

menu:
  main:
    - identifier: posts
      name: Posts
      url: /posts/
      weight: 0
    - identifier: categories
      name: Categories
      url: /categories/
      weight: 2
    - identifier: tags
      name: Tags
      url: /tags/
      weight: 3
    - identifier: aboutme
      name: About
      url: /about/
      weight: 30
    - identifier: privacy
      name: Privacy Policy
      url: /privacy/
      weight: 40
    - identifier: search
      name: Search
      url: /search/
      weight: 10
    - name: "@Author"
      url: "https://reorx.com"
      params:
        external: true

markup:
  highlight:
    noClasses: false

outputs:
  home:
    - HTML
    - RSS
    - JSON
  page:
    - HTML
  section:
    - HTML
    - RSS
  taxonomy:
    - HTML
    - RSS

sitemap:
  filename: "sitemap.xml"
  changefreq: "weekly"
  priority: 0.5
  includeHome: true
  includeSection: true

permalinks:
  posts: "/posts/:year/:slugorcontentbasename/" 
  section: "/:section/"
  about: "/about/"
  privacy: "/privacy/"

cascade:
  - _target:
      path: "posts/**"
    comments: true
    ShowToc: true
    TocOpen: false
    TocSide: right
    UseHugoToc: true
  - _target:
      kind: page
      section: posts
    editPost:
      URL: "https://github.com/fabiograsso/iam-fabiograsso-net/content"
      Text: "Suggest Changes"
      appendFilePath: true

params:
  hideFooter: true
  comments: true
  env: production
  description: "Il mio blog tecnico multilingua"
  author: "Fabio Grasso"
  defaultTheme: auto
  ShowReadingTime: true
  ShowShareButtons: true
  ShareButtons: ["linkedin", "x"]
  ShowPostNavLinks: true
  ShowBreadCrumbs: true
  ShowWordCount: true
  ShowPostCover: true
  ShowRssButtonInSectionTermList: true
  ShowPostNavLinks: true
  ShowCodeCopyButtons: true
  disableSpecial1stPost: false
  disableScrollToTop: false
  displayFullLangName: true
  EnableInstantClick: true
  homeInfoParams:
    Title: "PaperMod's Demo"
    Content: >
      ðŸ‘‹ Welcome to demo page of Hugo's theme PaperMod!
      - **PaperMod** is designed to be clean and simple but fast and responsive theme with useful feature-set that enhances UX.
      - Feel free to show your support by giving us a star ðŸŒŸ on GitHub and sharing with your friends and social media .
      - PaperMod is based on theme [Paper](https://github.com/nanxiaobei/hugo-paper/tree/4330c8b12aa48bfdecbcad6ad66145f679a430b3).
  socialIcons:
    - name: LinkedIn
      url: "https://linkedin.com/in/fabiograsso82"
    - name: GitHub
      url: "https://github.com/fabiograsso"
    - name: Instagram
      url: "https://instagram.com/fabiograsso82"
  label:
    text: "Home"
    icon: "/apple-touch-icon.png"
    iconHeight: 35
  cover:
    hidden: false
    hiddenInList: false
    hiddenInSingle: false
  assets:
    favicon: "/favicon.ico"
    favicon16x16: "/favicon-16x16.png"
    favicon32x32: "/favicon-32x32.png"
    apple_touch_icon: "/apple-touch-icon.png"
    safari_pinned_tab: "/safari-pinned-tab.svg"
    disableFingerprinting: true
  search:
    enable: true
    type: "lunr"
  fuseOpts:
    isCaseSensitive: false
    shouldSort: true
    includeMatches: false
    findAllMatches: false
    minMatchCharLength: 2
    location: 0
    distance: 100
    threshold: 0.4
    keys:
      - title
      - permalink
      - summary
      - content
      - description